@inherits LayoutComponentBase

<MudThemeProvider @rendermode="InteractiveServer" IsDarkMode="true" />
<MudSnackbarProvider @rendermode="InteractiveServer" />

<MudLayout>
    <MudAppBar Elevation="1" Dense="true">
        <MudText Typo="Typo.h5" Class="ml-2">Aplikacja POL-EKO</MudText>
    </MudAppBar>
    <MudDrawer Open="true" ClipMode="DrawerClipMode.Never" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="pl-8 pt-16 d-flex justify-center" Style="min-height: 70vh">
        <SnackbarHost />
        @Body
    </MudMainContent>
</MudLayout>
