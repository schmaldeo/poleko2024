@using PolekoWebApp.Data
@inject ILogger<SensorReadingsDialog> Logger

<MudDialog ContentStyle="min-width: 35rem;">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.TableChart" Class="mr-3 mb-n1"/>
            Odczyty
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTabs Elevation="4" Color="Color.Dark" Centered="true">
            <MudTabPanel Text="Tabela">
                
            </MudTabPanel>
            <MudTabPanel Text="Wykres">
                
            </MudTabPanel>
        </MudTabs>
        <MudItem Class="d-flex flex-row mt-4">
            <MudItem Class="ma-auto">
                <MudText Typo="Typo.body1">
                    Od:
                </MudText>
                <MudTextField T="DateTime?" Format="yyyy-MM-ddTHH:mm:ss" InputType="InputType.DateTimeLocal" @bind-Value="_beginDate"/>
            </MudItem>
            <MudItem Class="ma-auto">
                <MudText Typo="Typo.body1">
                    Do:
                </MudText>
                <MudTextField T="DateTime?" Format="yyyy-MM-ddTHH:mm:ss" InputType="InputType.DateTimeLocal" @bind-Value="_endDate"/>
            </MudItem>
        </MudItem>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Close">Zamknij</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    
    private List<SensorData> _dataToDisplay;
    private DateTime? _beginDate;
    private DateTime? _endDate;


    void Close() => MudDialog.Close(DialogResult.Cancel());
}