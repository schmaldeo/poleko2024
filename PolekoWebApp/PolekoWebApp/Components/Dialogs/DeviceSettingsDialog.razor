@using PolekoWebApp.Data
@using PolekoWebApp.Components.Services

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Settings" Class="mr-3 mb-n1"/>
            Ustawienia
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudItem>
            Częstotliwość odczytów
            <MudNumericField T="int" @bind-Value="_sensorCopy.FetchInterval"/>
        </MudItem>
        <MudItem>
            DHCP
            <MudCheckBox Color="Color.Primary" @bind-Value="_sensorCopy.UsesDhcp"/>
        </MudItem>
        <MudItem>
            Manualne monitorowania
            <MudCheckBox Color="Color.Primary" @bind-Value="@_sensorCopy.ManuallyStartFetch"/>
        </MudItem>
        <MudItem>
            <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="Delete">Usuń urządzenie</MudButton>
        </MudItem>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Anuluj</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Zapisz</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public Sensor Sensor { get; set; } = null!;
    private Sensor _sensorCopy = null!;

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(_sensorCopy));
    }
        
    private void Cancel() => MudDialog.Cancel();

    private void Delete()
    {
        MudDialog.Close(DialogResult.Ok(false));
    }

    protected override void OnInitialized()
    {
        _sensorCopy = new Sensor
        {
            FetchInterval = Sensor.FetchInterval,
            IpAddress = Sensor.IpAddress,
            MacAddress = Sensor.MacAddress,
            ManuallyStartFetch = Sensor.ManuallyStartFetch,
            SensorId = Sensor.SensorId,
            UsesDhcp = Sensor.UsesDhcp
        };
        base.OnInitialized();
    }
}