<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.QuestionMark" Class="mr-3 mb-n1"/>
            Czy jesteś pewien?
        </MudText>
    </TitleContent>
    <DialogContent>
        Czy na pewno chcesz usunąć ten czujnik?
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Nie</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Tak</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }

    void Cancel()
    {
        MudDialog.Cancel();
    }

}